						<Image url="@../image/corner-drag-35px.png" />
					</image>
				</ImageView>
				<ImageView cache="true" layoutX="10.0" layoutY="260.0" pickOnBounds="true" preserveRatio="true" rotate="90.0" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.valignment="TOP">
					<image>
						<Image url="@../image/corner-drag-35px.png" />
					</image>
				</ImageView>
				<ImageView cache="true" layoutX="210.0" layoutY="35.0" pickOnBounds="true" preserveRatio="true" rotate="180.0" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
					<image>
						<Image url="@../image/corner-drag-35px.png" />
					</image>
				</ImageView>
				<ImageView cache="true" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" scaleY="2.0" GridPane.rowIndex="1">
					<image>
						<Image url="@../image/side-drag-35px.png" />
					</image>
				</ImageView>
				<ImageView cache="true" layoutX="10.0" layoutY="143.0" pickOnBounds="true" preserveRatio="true" rotate="-180.0" scaleY="2.0" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
					<image>
						<Image url="@../image/side-drag-35px.png" />
					</image>
				</ImageView>
				<ImageView cache="true" pickOnBounds="true" preserveRatio="true" rotate="90.0" scaleY="2.0" GridPane.columnIndex="1" GridPane.valignment="TOP">
					<image>
						<Image url="@../image/side-drag-35px.png" />
					</image>
				</ImageView>
				<ImageView cache="true" pickOnBounds="true" preserveRatio="true" rotate="-90.0" scaleY="2.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
					<image>
						<Image url="@../image/side-drag-35px.png" />
					</image>
				</ImageView>
				<Button fx:id="captureButton" defaultButton="true" mnemonicParsing="false" onAction="#captureButton_onAction" styleClass="hortaFont" text="%RegionSelector.button.Capture" GridPane.columnIndex="1" GridPane.rowIndex="2">
